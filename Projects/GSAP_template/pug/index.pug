extends templates/template

block title
	title Index page

block content
	header.header
		.container
			h1.header__title Animation with GSAP

	section.section
		.container
			h2.section__title Basic animation
			
			.controlls
				button.controlls__btn.play play
				button.controlls__btn.pause pause
				button.controlls__btn.resume resume
				button.controlls__btn.reverse reverse
				button.controlls__btn.speedUp 2x speed
				button.controlls__btn.slowDown 2x slow
				button.controlls__btn.seek go to 3 sec
				button.controlls__btn.goTo go to 50%
				button.controlls__btn.restart restart
			.section__content
				a.logo(href="#")
					img(src="../dist/img/logo-man.svg", alt="man")

				.animation
					a.__element(href="#" id="el-1") 1
					a.__element(href="#" id="el-2") 2
					a.__element(href="#" id="el-3") 3
					a.__element(href="#" id="el-4") 4

